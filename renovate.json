{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "dependencyDashboardApproval": true,
  "labels": ["dependencies"],
  "vulnerabilityAlerts": {
    "enabled": true
  },
  "packageRules": [
    {
      "enabled": false,
      "matchPackagePatterns": ["*"]
    }
  ],
  "baseBranches": ["main"]
}
